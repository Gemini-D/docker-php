{
    "name": "gemini/docker-php",
    "license": "MIT",
    "type": "library",
    "description": "A Docker PHP client",
    "autoload": {
        "psr-4": {
            "Docker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Docker\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "gemini/docker-php-api": "^5.0",
        "guzzlehttp/psr7": "^1.2",
        "php-http/client-common": "^2.0",
        "php-http/socket-client": "^2.0",
        "php-http/message": "^1.0",
        "symfony/filesystem": "^5.4 || ^6.0 || ^7.0",
        "symfony/process": "^5.4 || ^6.0 || ^7.0",
        "php-http/message-factory": "^1.1"
    },
    "replace": {
        "docker-php/docker-php": "*"
    },
    "suggest": {
        "php-http/httplug-bundle": "For integration with Symfony",
        "amphp/artax": "To use the async api"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1.3",
        "friendsofphp/php-cs-fixer": "^3.59"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-clover build/coverage.xml",
        "lint": "vendor/bin/php-cs-fixer fix --dry-run --verbose --diff",
        "lint-fix": "vendor/bin/php-cs-fixer fix --verbose"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
